<Page
    x:Class="ClubCloud.Afhangen.ExtendedSplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SplashScreenBackgroundThemeBrush}">
        <Canvas>
            <Image Stretch="None" 
                   x:Name="splashImage" 
                   Source="/Assets/SplashScreen.png" 
                   Canvas.Left="350" 
                   Canvas.Top="250"/>
            
            <ProgressRing x:Name="progressRing" 
                          Height="30" Width="30" 
                          BorderThickness="1" 
                          Foreground="{ThemeResource SplashScreenProgressForegorundThemeBrush}" 
                          IsActive="True" 
                          Canvas.Left="650" 
                          Canvas.Top="550"/>
        </Canvas>
    </Grid>
</Page>
